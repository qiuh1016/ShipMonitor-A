<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cetcme.shipmonitor.RecordActivity">

    <Button
        android:text="WAV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_record_wav"
        android:onClick="clicked"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:text="AMR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_record_amr"
        android:onClick="clicked"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignBaseline="@+id/btn_record_wav"
        android:layout_alignBottom="@+id/btn_record_wav"
        android:layout_toRightOf="@+id/btn_record_wav"
        android:layout_toEndOf="@+id/btn_record_wav"/>

    <Button
        android:text="STOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_stop"
        android:onClick="clicked"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignBaseline="@+id/btn_record_amr"
        android:layout_alignBottom="@+id/btn_record_amr"
        android:layout_toRightOf="@+id/btn_record_amr"
        android:layout_toEndOf="@+id/btn_record_amr"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_record_wav"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:id="@+id/text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_stop"
        android:layout_alignRight="@+id/btn_stop"
        android:layout_alignEnd="@+id/btn_stop"
        android:id="@+id/btn_play"/>

</RelativeLayout>
